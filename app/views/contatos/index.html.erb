<h1 class="header__contatos">Lista de Contatos</h1>

<table>
  <thead>
    <tr>
      <th class="title__form">Nome</th>
      <th class="title__form">Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="info__contact">
    <% @contatos.each do |contato| %>
      <tr>
        <td class="title__contact"><%= contato.nome %></td>
        <td class="title__contact"><%= contato.telefone %></td>
        <td class="button__edit"><%= link_to 'Mostrar', contato %></td>
        <td class="button__edit"><%= link_to 'Editar', edit_contato_path(contato) %></td>
        <td class="button__edit"><%= link_to 'Destruir', contato, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

