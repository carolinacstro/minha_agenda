<p id="notice"><%= notice %></p>

<h1 class="header__contatos" >Contatos</h1>

<table>
  <thead>
    <tr>
      <th class="title__form">Nome</th>
      <th class="title__form">Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="info__contact">
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.nome %></td>
        <td><%= contato.telefone %></td>
        <td class="button__edit"><%= link_to 'Show', contato %></td>
        <td class="button__edit"><%= link_to 'Edit', edit_contato_path(contato) %></td>
        <td class="button__edit"><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

